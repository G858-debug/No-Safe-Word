{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build --workspace=@no-safe-word/dashboard"
  },
  "deploy": {
    "startCommand": "npm run start --workspace=@no-safe-word/dashboard",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
